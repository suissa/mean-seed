            a(href='/beers/{{beer._id}}') 
              | {{beer.name}}
          td
            a(href='/beers/{{beer._id}}/edit') 
              | EDIT
          td 
            span(data-ng-controller='RemoveBeer')
              button(data-ng-click='remove(beer)') REMOVER
        
